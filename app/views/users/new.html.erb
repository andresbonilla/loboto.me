<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>  
  <p>  
		<%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>   
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>  
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </p> 
  <p> 
    <%= f.submit "Sign Up" %>
  </p> 
<% end %>
