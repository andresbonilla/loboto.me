<header>
  <%= link_to root_url do %>	
		<%= image_tag "logo.png" %>
	<% end %>
  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
			<% if signed_in? %>
			  <li><%= link_to "Profile", current_user %></li>
			<% end %>
      <li><%= link_to "Help", help_url %></li>
      <% if signed_in? %>
      <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Sign in", signin_path %></li>
      <% end %>
    </ul>
  </nav>
<div style="clear:both"></div>
</header>
