<h1>Sign in</h1>

<div id= "loginForm">
<%= form_for(:session, :url => sessions_path) do |f| %>
  <p>
    <%= f.label :username %>&nbsp;<%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>&nbsp;<%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Sign in", :class=>"btn", :onmouseover=>"this.className='btn btnhov'", :onmouseout=>"this.className='btn'" %>
  </p>
<% end %>
<div id="signupButton" class="uiButton blueButton"><%= link_to "Sign up now!", signup_path %></div>

</div>

