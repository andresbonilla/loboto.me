<h1>Listing credentials</h1>

<table>
  <tr>
    <th>Service</th>
    <th>Username</th>
    <th>Hashed password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @credentials.each do |credential| %>
  <tr>
    <td><%= credential.service %></td>
    <td><%= credential.username %></td>
    <td><%= credential.hashed_password %></td>
    <td><%= link_to 'Show', credential %></td>
    <td><%= link_to 'Edit', edit_credential_path(credential) %></td>
    <td><%= link_to 'Destroy', credential, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

